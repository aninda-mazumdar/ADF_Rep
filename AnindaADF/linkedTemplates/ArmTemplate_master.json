{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AnindaADF"
		},
		"AdventureWorks2012_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AdventureWorks2012'"
		},
		"AdventureWorks2012_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'AdventureWorks2012'"
		},
		"LS_AindaBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_AindaBlobStorage'"
		},
		"LS_AnindaSampleDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_AnindaSampleDB'"
		},
		"MyDevice_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'MyDevice'"
		},
		"SelfHosted_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SelfHosted'"
		},
		"SelfHosted_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SelfHosted'"
		},
		"AdventureWorks2012_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "DESKTOP-J9AI0BT\\anind"
		},
		"MyDevice_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Users\\anind\\Desktop"
		},
		"MyDevice_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "DESKTOP-J9AI0BT\\anind"
		},
		"SelfHosted_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "DESKTOP-J9AI0BT\\anind"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "AnindaADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_AindaBlobStorage_connectionString": {
						"value": "[parameters('LS_AindaBlobStorage_connectionString')]"
					},
					"LS_AnindaSampleDB_connectionString": {
						"value": "[parameters('LS_AnindaSampleDB_connectionString')]"
					},
					"AdventureWorks2012_connectionString": {
						"value": "[parameters('AdventureWorks2012_connectionString')]"
					},
					"AdventureWorks2012_password": {
						"value": "[parameters('AdventureWorks2012_password')]"
					},
					"MyDevice_password": {
						"value": "[parameters('MyDevice_password')]"
					},
					"SelfHosted_connectionString": {
						"value": "[parameters('SelfHosted_connectionString')]"
					},
					"SelfHosted_password": {
						"value": "[parameters('SelfHosted_password')]"
					},
					"AdventureWorks2012_properties_typeProperties_userName": {
						"value": "[parameters('AdventureWorks2012_properties_typeProperties_userName')]"
					},
					"MyDevice_properties_typeProperties_host": {
						"value": "[parameters('MyDevice_properties_typeProperties_host')]"
					},
					"MyDevice_properties_typeProperties_userId": {
						"value": "[parameters('MyDevice_properties_typeProperties_userId')]"
					},
					"SelfHosted_properties_typeProperties_userName": {
						"value": "[parameters('SelfHosted_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "AnindaADF_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'AnindaADF_ArmTemplate_0')]"
			]
		}
	]
}